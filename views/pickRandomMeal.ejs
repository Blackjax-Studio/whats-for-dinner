<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pick Random Meal - Stub</title>
    <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Vend+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #FFFFFF;
            --accent: #0062FF;
            --accent2: #008639;
            --warn: #E25600;
            --text-main: #0D0D0D;
            --text-muted: #6E6E6E;
            --sans: 'Vend Sans', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            --display: 'Alfa Slab One', serif;
        }
        @media (prefers-color-scheme: dark) {
            :root {
                --bg-color: #212121;
                --accent: #0084FF;
                --accent2: #40C977;
                --warn: #FF9E60;
                --text-main: #FFFFFF;
                --text-muted: #CDCDCD;
            }
        }
        body {
            font-family: var(--sans);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: var(--bg-color);
            color: var(--text-main);
        }
        .container {
            text-align: center;
            padding: 0.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            overflow: hidden;
        }
        #loading-text {
            font-family: var(--display);
            font-size: 2.2rem;
            color: var(--accent);
            padding: 12px 20px;
            animation: pulsate 1.5s ease-in-out infinite;
        }
        #cycling-text {
            font-family: var(--display);
            font-size: 3rem;
            font-weight: 400;
            color: var(--accent);
            text-align: center;
            padding: 12px 20px 4px;
            white-space: nowrap;
            overflow: hidden;
            max-width: 100%;
            display: none;
            transition: all 0.2s ease-out;
        }
        .cycling-text-change {
            transform: scale(1.05);
        }
        #cycling-text.landed, .landed {
            color: var(--accent2);
            font-size: 1.8rem;
            transform: scale(1);
            transition: all 0.5s ease;
            text-align: left;
            padding: 0;
            font-family: var(--display);
            font-weight: 400;
            word-break: break-word;
            max-width: 100%;
        }
        #description {
            font-family: var(--sans);
            font-size: 1rem;
            color: var(--text-muted);
            margin-top: 4px;
            padding: 0;
            display: none;
            max-width: 100%;
            text-align: left;
        }
        .result-layout {
            display: none;
            width: 100%;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
            padding: 10px 20px;
        }
        .result-left {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        .result-right {
            display: flex;
            flex-direction: column;
            gap: 8px;
            align-items: flex-end;
        }
        .text-btn {
            font-family: var(--display);
            font-size: 0.9rem;
            color: var(--accent);
            background: none;
            border: none;
            cursor: pointer;
            padding: 4px 0;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: opacity 0.2s;
            white-space: nowrap;
        }
        .text-btn:hover {
            opacity: 0.7;
        }
        .text-btn-spin {
            color: var(--warn);
        }
        @media (max-width: 480px) {
            #loading-text {
                font-size: 1.6rem;
            }
            #cycling-text {
                font-size: 2.2rem;
            }
            #cycling-text.landed, .landed {
                font-size: 1.4rem;
            }
            #description {
                font-size: 0.85rem;
            }
            .result-layout {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
            }
            .result-right {
                align-items: flex-start;
                width: 100%;
            }
        }
        @keyframes pulsate {
            0% { opacity: 0.6; transform: scale(0.98); }
            50% { opacity: 1; transform: scale(1); }
            100% { opacity: 0.6; transform: scale(0.98); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div id="loading-text">Loading up the options</div>
        <div id="cycling-text"></div>

        <div class="result-layout" id="result-layout">
            <div class="result-left">
                <div id="landed-title" class="landed"></div>
                <div id="description"></div>
            </div>
            <div class="result-right">
                <button id="btn-recipes" class="text-btn">Get Recipes</button>
                <button id="btn-restaurants" class="text-btn">Find Restaurants</button>
                <button id="btn-spin-again" class="text-btn text-btn-spin">Spin Again</button>
            </div>
        </div>
    </div>

    <script>
        let mealOptions = [];
        let isStarted = false;

        const loadingText = document.getElementById('loading-text');
        const cyclingText = document.getElementById('cycling-text');
        const descriptionText = document.getElementById('description');
        const resultLayout = document.getElementById('result-layout');
        const landedTitle = document.getElementById('landed-title');

        const btnRecipes = document.getElementById('btn-recipes');
        const btnRestaurants = document.getElementById('btn-restaurants');
        const btnSpinAgain = document.getElementById('btn-spin-again');

        const startAnimation = (options) => {
            if (isStarted || !options || options.length === 0) return;
            isStarted = true;

            mealOptions = options;

            loadingText.style.display = 'none';
            resultLayout.style.display = 'none';
            cyclingText.style.display = 'block';

            let currentIndex = 0;
            const cycleInterval = 150; // ms
            const cycleDuration = 2000; // how long to cycle for
            const iterations = cycleDuration / cycleInterval;
            let currentIteration = 0;

            const runCycle = () => {
                const currentOption = mealOptions[currentIndex];
                cyclingText.textContent = currentOption.title || currentOption.name;

                // Cool transition scale effect
                cyclingText.classList.add('cycling-text-change');
                setTimeout(() => cyclingText.classList.remove('cycling-text-change'), 50);

                if (currentIteration < iterations) {
                    currentIndex = (currentIndex + 1) % mealOptions.length;
                    currentIteration++;
                    setTimeout(runCycle, cycleInterval);
                } else {
                    // Land on the current meal
                    cyclingText.style.display = 'none';
                    resultLayout.style.display = 'flex';

                    landedTitle.textContent = currentOption.title || currentOption.name;
                    landedTitle.className = 'landed';

                    descriptionText.textContent = currentOption.description;
                    descriptionText.style.display = 'block';

                    // Button Logic
                    const mealName = currentOption.title || currentOption.name;
                    const isRestaurant = currentOption.type === 'restaurant';

                    btnRecipes.onclick = () => {
                        if (window.openai?.sendFollowUpMessage) {
                            window.openai.sendFollowUpMessage({
                                prompt: `Find me one recipe for ${mealName}. Provide the recipe directly without repeating these instructions or any internal preamble.`
                            });
                        }
                    };

                    btnRestaurants.onclick = () => {
                        if (window.openai?.sendFollowUpMessage) {
                            window.openai.sendFollowUpMessage({
                                prompt: `Find restaurants near me that serve ${mealName}. Provide a list directly with locations. Get right to the point without repeating these instructions.`
                            });
                        }
                    };

                    btnSpinAgain.onclick = () => {
                        isStarted = false;
                        startAnimation(mealOptions);
                    };
                }
            };

            runCycle();
        };

        const setupWidget = (toolOutput) => {
            if (!toolOutput || !toolOutput.options) return;
            startAnimation(toolOutput.options);
        };

        const handleSetGlobals = (event) => {
            console.log("openai:set_globals event received");
            const globals = event.detail?.globals;
            setupWidget(globals?.toolOutput);
        };

        window.addEventListener("openai:set_globals", handleSetGlobals);

        // Initial check
        if (window.openai?.toolOutput) {
            console.log("Found toolOutput in window.openai");
            setupWidget(window.openai.toolOutput);
        } else {
            console.log("Waiting for openai:set_globals event or toolOutput");
        }
    </script>
</body>
</html>
