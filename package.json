{
  "name": "whats-for-dinner",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that helps you decide what to eat with interactive widgets for ChatGPT and other MCP clients",
  "author": "Robert Schupp",
  "license": "MIT",
  "type": "module",
  "main": "dist/app.js",
  "bin": {
    "whats-for-dinner": "dist/app.js"
  },
  "files": [
    "dist",
    "views",
    "README.md",
    "LICENSE.md",
    "CONTRIBUTING.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Blackjax-Studio/whats-for-dinner.git"
  },
  "bugs": {
    "url": "https://github.com/Blackjax-Studio/whats-for-dinner/issues"
  },
  "homepage": "https://github.com/Blackjax-Studio/whats-for-dinner",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "chatgpt",
    "claude",
    "dinner",
    "food",
    "restaurant",
    "recipe",
    "decision-maker",
    "nodejs",
    "typescript"
  ],
  "scripts": {
    "build:server": "tsc",
    "build": "npm run build:server && chmod +x dist/app.js",
    "start": "npm run build && node dist/app.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "inspect": "npx @modelcontextprotocol/inspector@latest --server-url http://localhost:8787/mcp --transport https"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "express": "^5.2.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.1.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
